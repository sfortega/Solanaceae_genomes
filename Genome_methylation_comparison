#################
###6.1. Retrieve methylation of NLRs - S.nigrum -genes, upstream (1Kb) or downstream (1Kbp) regions 
#################Start retrieving the genes names on 53 NLRs shared between susceptible species
awk '{print $11}' NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes > NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names
sed 's/;/\t/g' NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names >  NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names2
awk '{print $1}'  NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names2 >  NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names3
sed 's/ID=//g' NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names3 >  NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names4
grep -wFf NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names4 Orthogroups.txt > NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names4_OG ###NONE
###25 OGs--->not one single of them common between all 5 susceptible.
####Check methylation of all the Sn genes in common with susceptible total 53 NLRs -->file is NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names4

#################Retrieve first annotation of all the other 384 NLRs in S.nigrum and use bedtools to match with methylation gene, upstream and downstream
awk '{print $11}' NLR/NLR_nigrum_genome_genes > NLR/NLR_nigrum_genome_genes_names
sed 's/;/\t/g' NLR/NLR_nigrum_genome_genes_names >  NLR/NLR_nigrum_genome_genes_names2
awk '{print $1}'  NLR/NLR_nigrum_genome_genes_names2 >  NLR/NLR_nigrum_genome_genes_names3
sed 's/ID=//g' NLR/NLR_nigrum_genome_genes_names3 >  NLR/NLR_nigrum_genome_genes_names4
grep -wFf NLR/NLR_nigrum_genome_genes_names4 S.nigrum.annotation.genes3 > NLR/NLR_nigrum_genome_genes_names4_all
####sort and uniq
sort NLR/NLR_nigrum_genome_genes_names4_all

######437 -53 NLRs ---->384
grep -vFf  NLR/NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names4 NLR/NLR_nigrum_genome_genes_names4_all > NLR/384_NLRs_SN_no_shared 
grep -wFf NLR/NLR_nigrum_genome_genes_match_orthofinder_3531_all_susceptible_genes_names4 S.nigrum.annotation.genes3 > NLR/53_NLR_nigrum_susceptible

####retrieve methylation of the 384
###gene bodies 384
bedtools intersect -a NLR/384_NLRs_SN_no_shared -b  nigrum_meth -wo > NLR/384_NLRs_SN_no_shared_meth_genes
###upstream 384
awk 'BEGIN{OFS="\t";FS="\t"} {if ($4 == "+") {print $1,$2-1000, $3-1, $4, $5} else {print $1,$3+1,$3+1000, $4, $5}}' NLR/384_NLRs_SN_no_shared > NLR/384_NLRs_SN_no_shared.genes.upstream
sed 's/ /\t/g' NLR/384_NLRs_SN_no_shared.genes.upstream > NLR/384_NLRs_SN_no_shared.genes.upstream2
bedtools intersect -a NLR/384_NLRs_SN_no_shared.genes.upstream2 -b  nigrum_meth -wo > NLR/384_NLRs_SN_no_shared.upstream_meth

###downstream 384
awk 'BEGIN{OFS="\t";FS="\t"} {if ($4 == "+") {print $1,$3+1, $3+1000, $4, $5} else {print $1,$2-1000,$2-1, $4, $5}}' NLR/384_NLRs_SN_no_shared > NLR/384_NLRs_SN_no_shared.genes.downstream
sed 's/ /\t/g' NLR/384_NLRs_SN_no_shared.genes.downstream > NLR/384_NLRs_SN_no_shared.genes.downstream2
bedtools intersect -a NLR/384_NLRs_SN_no_shared.genes.downstream2 -b  nigrum_meth -wo > NLR/384_NLRs_SN_no_shared.downstream_meth


####retrieve methylation of the 53
###gene bodies 53 NLRs
bedtools intersect -a NLR/53_NLR_nigrum_susceptible -b  nigrum_meth -wo > NLR/53_NLR_nigrum_susceptible_meth_genes

###upstream
awk 'BEGIN{OFS="\t";FS="\t"} {if ($4 == "+") {print $1,$2-1000, $2-1, $4, $5} else {print $1,$3+1,$3+1000, $4, $5}}' NLR/53_NLR_nigrum_susceptible > NLR/53_NLR_nigrum_susceptible.genes.upstream
sed 's/ /\t/g' NLR/53_NLR_nigrum_susceptible.genes.upstream > NLR/53_NLR_nigrum_susceptible.genes.upstream2
bedtools intersect -a NLR/53_NLR_nigrum_susceptible.genes.upstream2 -b  nigrum_meth -wo >  NLR/53_NLR_nigrum_susceptible.upstream_meth

###downstream
awk 'BEGIN{OFS="\t";FS="\t"} {if ($4 == "+") {print $1,$3+1, $3+1000, $4, $5} else {print $1,$2-1000,$2-1, $4, $5}}' NLR/53_NLR_nigrum_susceptible > NLR/53_NLR_nigrum_susceptible.genes.downstream
sed 's/ /\t/g' NLR/53_NLR_nigrum_susceptible.genes.downstream > NLR/53_NLR_nigrum_susceptible.genes.downstream2
bedtools intersect -a NLR/53_NLR_nigrum_susceptible.genes.downstream2 -b  nigrum_meth -wo > NLR/53_NLR_nigrum_susceptible.downstream_meth



