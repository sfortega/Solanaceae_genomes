coord_dulc_dasol=coords[,c(11,3,4)]
coord_dulc_dasol$V11=gsub("ntJoin","Sd_",coord_dulc_dasol$V11)
###coord_dulc_dasol$V11=gsub("S.dulcamara","Sd",coord_dulc_dasol$V11)
coord_dulc_dasol$col <- as.character(unlist(mget(coord_dasol_dulc$V10, ifnotfound = list(function(x) getColFromList(x)))))


library(tidyr)
sizes_sd_sd=sizes[grepl("Dulc|Sd",sizes$Name),]
tiff("dulc_dasol.tiff",res=300,he=100,wi=100,units="mm")
par(cex = 0.7) 
circos.par("cell.padding" = c(0, 0, 0, 0))
circos.par(points.overflow.warning = FALSE)
##circos.par(gap.after = c(rep(0.3, 22), 8, rep(1.3, 22), 8))
circos.par(track.margin=c(0,0))
circos.par(gap.after = 0.1)
circos.genomicInitialize(sizes_sd_sd)
circos.genomicLink(coord_dulc_dasol, coord_dasol_dulc, col =coord_dulc_dasol$col,border = coord_dulc_dasol$col)
circos.clear()
dev.off()

